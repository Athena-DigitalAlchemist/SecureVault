{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "DataDirectory": "Data",
  "JwtSettings": {
    "SecretKey": "your-secret-key-here",
    "Issuer": "SecureVault",
    "Audience": "SecureVaultClients",
    "ExpirationMinutes": 60
  },
  "SmtpSettings": {
    "Host": "smtp.example.com",
    "Port": 587,
    "Username": "your-username",
    "Password": "your-password",
    "FromEmail": "noreply@securevault.com",
    "FromName": "SecureVault",
    "EnableSsl": true
  },
  "StorageSettings": {
    "BaseStoragePath": "Storage",
    "MaxFileSize": 104857600,
    "AllowedFileTypes": [
      ".pdf",
      ".doc",
      ".docx",
      ".xls",
      ".xlsx",
      ".txt",
      ".jpg",
      ".jpeg",
      ".png"
    ]
  }
}
