{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=|DataDirectory|\\SecureVault.db;Mode=ReadWrite;Cache=Shared"
  },
  "Security": {
    "IterationCount": 310000,
    "KeySize": 256,
    "DefaultSaltSize": 32,
    "DefaultMasterKey": null,
    "MinPasswordLength": 14,
    "RequireUppercase": true,
    "RequireLowercase": true,
    "RequireNumbers": true,
    "RequireSpecialChars": true,
    "AutoLockTimeMinutes": 10,
    "KeyRotationDays": 60,
    "MaxFailedAttempts": 5,
    "LockoutDurationMinutes": 30
  },
  "Backup": {
    "AutoBackupEnabled": true,
    "BackupIntervalDays": 7,
    "BackupRetentionDays": 30,
    "DefaultBackupLocation": "%APPDATA%\\SecureVault\\Backups",
    "MaxBackupSizeMB": 100,
    "CompressBackups": true,
    "EncryptBackups": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore": "Warning"
    },
    "File": {
      "Path": "%APPDATA%\\SecureVault\\Logs\\securevault-.log",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 30,
      "FileSizeLimitBytes": 10485760,
      "RollOnFileSizeLimit": true
    }
  }
}
