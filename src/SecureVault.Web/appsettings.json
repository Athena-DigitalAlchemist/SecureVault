{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "DataDirectory": "Data",
  "SmtpSettings": {
    "Host": "smtp.gmail.com",
    "Port": 587,
    "Username": "your-email@gmail.com",
    "Password": "your-app-specific-password",
    "FromEmail": "noreply@securevault.com",
    "FromName": "SecureVault",
    "EnableSsl": true
  },
  "SecuritySettings": {
    "PasswordResetTokenExpiryHours": 1,
    "MaxFailedLoginAttempts": 5,
    "LockoutDurationMinutes": 30,
    "TwoFactorCodeExpiryMinutes": 10,
    "SessionTimeoutMinutes": 30,
    "RequireTwoFactorForNewDevices": true,
    "MinPasswordLength": 8,
    "RequireUppercase": true,
    "RequireLowercase": true,
    "RequireDigit": true,
    "RequireSpecialCharacter": true,
    "PasswordHistoryCount": 5
  },
  "BackupSettings": {
    "DefaultBackupLocation": "Backups",
    "MaxBackupSizeGB": 10,
    "RetentionPeriodDays": 30,
    "CompressionEnabled": true,
    "EncryptBackups": true
  }
}
